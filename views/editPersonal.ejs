<body>
    <header id="header" id="home">
        <div class="container">
         <div class="row align-items-center justify-content-between d-flex">
          <div id="logo">
           <h1 class="text-white text-uppercase">Dormmate</h1>
          </div>
         </div>
        </div>
       </header>
    <!-- start banner Area -->
 <section id="home">
  <div class="container">
      <br><br><br><br>
        <div class="col-lg-12" style="width: 100%;">
            <form id="msform" action="/editPersonalInfo" method="POST">
                <fieldset>
                  <h2 class="fs-title">Edit Personal Info</h2>
                  <h3 class="fs-subtitle">Your Personal Information</h3>
                  <div class="row">
                      <div class="col-lg-2"></div>
                      <div class="col-lg-2"></div>
                  </div>
                  <div class="row">
                      <div class="col-lg-2"></div>
                      <div class="col-lg-8">
                        <h5>First Name</h5>
                        <input type="text" class="design" name="fname" value="<%= info[0].FIRSTNAME %>" required/>
                      </div>
                      <div class="col-lg-2"></div>
                  </div>
                  <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h5>Last Name</h5>
                      <input type="text" class="design" name="lname" value="<%= info[0].LASTNAME %>" required/>
                    </div>
                    <div class="col-lg-2"></div>
                </div>
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h5>Birthdate</h5>
                        <input required="" type="text" class="design" value="<%= info[0].bday %>" name="bday" onfocus="(this.type='date')" required/>
                    </div>
                    <div class="col-lg-2"></div>
                </div>

                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                      <h5>Occupation</h5>
                      <input required="" type="text" class="design" value="<%= info[0].OCCUPATION %>" name="occupation"/>
                  </div>
                  <div class="col-lg-2"></div>
                </div>

                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h5 class="text-dark" style="margin-top: 20px;">Are You a Student?</h5>
                        <div class="row">
                          <% if(info[0].VERIFIEDSTUDENT === 'T'){ %>
                            <div class="col">
                                <h5 class="text-dark" for="Yes">Yes</h5>
                                <input type="radio" class="input student-verified" id="Yes" name="student" value="T" checked>
                            </div>
                            <div class="col">
                                <h5 class="text-dark" for="No">No</h5>
                                <input type="radio" class="input student-not-verified" id="No" name="student" value="F">     
                            </div>
                          <% }else{ %>
                            <div class="col">
                              <h5 class="text-dark" for="Yes">Yes</h5>
                              <input type="radio" class="input student-verified" id="Yes" name="student" value="T">
                          </div>
                          <div class="col">
                              <h5 class="text-dark" for="No">No</h5>
                              <input type="radio" class="input student-not-verified" id="No" name="student" value="F" checked>     
                          </div>
                          <% } %>
                        </div>  
                    </div>
                    <div class="col-lg-2"></div>
                </div>
                <div class="column student-section">
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-8">
                            <h5>School Level</h5>
                            <select name="schoollevel" id="wifi" class="design text-uppercase custom-select" style="width: 120px;">
                              <optgroup label="School Level">
                                <option value="<%= info[0].SCHOOLLEVEL %>"><%= info[0].SCHOOLLEVEL %></option>
                                <% if(info[0].SCHOOLLEVEL === 'Secondary'){ %>  
                                  <option value="Tertiary">Tertiary</option>
                                <% }else{ %>
                                  <option value="Secondary">Secondary</option>
                                <% } %>
                              </optgroup>
                            </select>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-8">
                           <br> <h5>Student ID Number/Code</h5>
                            <input type="text" class="input design" value="<%= info[0].SCHOOLID %>" name ="schoolid">
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-8">
                            <h5>School Name</h5>
                            <input type="text" class="input design" value="<%= info[0].SCHOOLNAME %>" name="schoolname">
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                </div><br><br>
                <h2 class="fs-title">Preferences</h2>
                  <h3 class="fs-subtitle">Your Personal Preferences</h3>
                  <div class="row">
                      <div class="col-lg-5"></div>
                      <div class="col-lg-2">
                        <div class="custom-control custom-checkbox">
                          <% if(info[0].SMOKING === 'No'){ %>  
                            <input type="checkbox" class="custom-control-input" id="Smoker" value="Yes" name="smoker">
                            <label class="custom-control-label" for="Smoker">Smoking</label>
                          <% }else{ %>
                            <input type="checkbox" class="custom-control-input" id="Smoker" value="Yes" name="smoker" checked>
                            <label class="custom-control-label" for="Smoker">Smoking</label>  
                          <% } %>
                        </div>
                      </div>
                      <div class="col-lg-5"></div>
                  </div>
                  <div class="row">
                    <div class="col-lg-5"></div>
                    <div class="col-lg-2">
                      <div class="custom-control custom-checkbox">
                        <% if(info[0].PETS === 'No'){ %>  
                          <input type="checkbox" class="custom-control-input" id="Pets" value="Yes" name="pets">
                          <label class="custom-control-label" for="Pets">Pets</label>
                        <% }else{ %>
                          <input type="checkbox" class="custom-control-input" id="Pets" value="Yes" name="pets" checked>
                          <label class="custom-control-label" for="Pets">Pets</label>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-lg-5"></div>
                </div>
                <div class="row">
                    <div class="col-lg-5"></div>
                    <div class="col-lg-2">
                      <div class="custom-control custom-checkbox">
                        <% if(info[0].ALCOHOL === 'No'){ %>  
                          <input type="checkbox" class="custom-control-input" id="Alcohol" value="Yes" name="alcohol">
                          <label class="custom-control-label" for="Alcohol">Alcohol</label>
                        <% }else{ %>
                          <input type="checkbox" class="custom-control-input" id="Alcohol" value="Yes" name="alcohol" checked>
                          <label class="custom-control-label" for="Alcohol">Alcohol</label>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-lg-5"></div><br><br>
                </div>
                  <a href = "/profile" type="button" name="previous" class="previous action-button btn-success" style="border-radius:25px">Cancel</a>
                  <input type="submit" name="next" class="next action-button btn-success" value="Edit" style="border-radius:25px"/>
                </fieldset>
              </form>
        </div>
   </div>
