 <section id="home">
  <div class="container">
      <br><br><br><br>
        <div class="col-lg-12" style="width: 100%;">
            <form id="msform" action="/editAccountInfo" method="POST">
                <!-- fieldsets -->
                <fieldset>
                  <h2 class="fs-title">Edit Account Info</h2>
                  <h3 class="fs-subtitle">Please input the following information.</h3>
                  <% if(typeof error != "undefined") {%>
                    <h6 style="color: red;"><%= "Error(Creation Failed): Cannot Update Account Info"; %></h6>
					<% } %>
					<div class="row">
						<div class="col-lg-2"></div>
						<div class="col-lg-8">
						  <h5>Profile Picture</h5>
						  <input type="text" class="design" name="profile" value="<%= info[0].profilepicture %>"  default = "https://cdn.pixabay.com/photo/2017/06/13/12/53/profile-2398782_1280.png" autofocus/>
						</div>
						<div class="col-lg-2"></div>
					</div>
                  <div class="row">
                      <div class="col-lg-2"></div>
                      <div class="col-lg-8">
                        <h5>Username</h5>
                        <input type="text" class="design" name="username" value="<%= info[0].username %>" required autofocus/>
                      </div>
                      <div class="col-lg-2"></div>
                  </div>
                  <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h5>Email Address</h5>
                        <input type="email" class ="design" name="email" value="<%= info[0].email %>" required/>
                    </div>
                    <div class="col-lg-2"></div>
                  </div>
                  <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h5>Password</h5>
                        <input type="password" class ="design required" name="password" value="<%= info[0].password %>" required/>
                    </div>
                    <div class="col-lg-2"></div>
                  </div>
                  
                  <a type="button" name="next" class="next action-button btn-success" href="/profile?id=<%= info[0].userid %>" style="border-radius: 25px;">Cancel</a>
                  <input type="submit" class="next action-button btn-success" value="Edit" style="border-radius: 25px;"/><br>
                </fieldset>
              </form>
        </div>
